<?xml version="1.0" encoding="UTF-8"?>
<!-- 이 문서는 MyBatis 에서 처리할 SQL문을 작성하는 문서입니다 -->
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0/EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- <Mapper>태그의 NameSpace 속성은 Java소스에서 실행할 SQL문을 호출할 때 같이 사용되는 이름 -->	
<mapper namespace="jdbc">
	<insert id="insertLprod" parameterType="lprodVo">
		insert into lprod values (#{lprod_id}, #{lprod_gu}, #{lprod_nm})
	</insert>
	
	<select id="getNextId" resultType="int">
		select nvl(max(lprod_id),0)+1 from lprod
	</select>
	
	<select id="getLprodCount" parameterType="String" resultType="int">
		select count(*) from lprod where lprod_gu = #{lprod_gu}
	</select>
</mapper>